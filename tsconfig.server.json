{
    "ts-node": {
      "transpileOnly": true,
      "files": true,
      // Tell ts-node CLI to install the --loader automatically, explained below
      "esm": true,
      "experimentalSpecifierResolution": "node",
      "compilerOptions": {
        "outDir": "lib",
        "module": "ESNext"
      }
    },
    "compilerOptions": {
      "outDir": "lib",
      "module": "ESNext",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "DOM",
        "ES2015"
      ],
      "target": "ES2015"
    },
    "include": ["src/server"]
}